<h1>Listing emails</h1>

<table>
  <tr>
    <th>Person</th>
    <th>Name</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.person_id %></td>
    <td><%= email.name %></td>
    <td><%= email.address %></td>
    <td><%= link_to 'Show', email %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

