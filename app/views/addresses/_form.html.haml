= semantic_form_for @address do |f|
  = f.inputs do
    = f.input :person, :include_blank => false, :label_method => :display_name, :collection => Person.order_by_last_name
    = f.input :name, :label=>'Address Type'
    = f.input :address1
    = f.input :address2
    = f.input :address3
    = f.input :address4
    = f.input :city
    = f.input :state
    = f.input :zip
    = f.input :country, :as=>:string
  = f.buttons do
    = f.commit_button
