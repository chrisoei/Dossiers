<%= semantic_form_for @address do |f| %>
  <%= f.inputs do %>
    <%= f.input :person, :include_blank => false, :label_method => :name %>
    <%= f.input :name, :label=>'Address Type' %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :address3 %>
    <%= f.input :address4 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :country, :as=>:string %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
