<%= semantic_form_for @person do |f| %>
  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
    <%= f.input :father %>
    <%= f.input :mother %>
    <%= f.input :linkedin %>
    <%= f.input :facebook %>
    <%= f.input :skype %>
    <%= f.input :birthday, :as => :date, :start_year => 1900 %>
    <%= f.input :notes, :input_html => {:class=>'autogrow', :rows=>10, :cols=>80} %>
    <%= f.semantic_fields_for :emails do |e|%>
      <%= e.input :name, :label=>'Email Type' %>
      <%= e.input :address %>
    <% end %>
    <%= f.semantic_fields_for :phone_numbers do |p|%>
      <%= p.input :name, :label=>'Phone Type' %>
      <%= p.input :number %>
    <% end %>
    <%= f.semantic_fields_for :addresses do |a|%>
      <%= a.input :name, :label=>'Address Type'%>
      <%= a.input :address1 %>
      <%= a.input :address2 %>
      <%= a.input :address3 %>
      <%= a.input :address4 %>
      <%= a.input :city %>
      <%= a.input :state %>
      <%= a.input :zip %>
      <%= a.input :country, :as=>:string %>
    <% end %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
