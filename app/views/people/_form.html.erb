<%= semantic_form_for @person do |f| %>
  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
    <%= f.input :linkedin %>
    <%= f.input :facebook %>
    <%= f.input :skype %>
    <%= f.input :birthday, :as => :date, :start_year => 1900 %>
    <%= f.input :notes, :input_html => {:class=>'autogrow', :rows=>10, :cols=>80} %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
