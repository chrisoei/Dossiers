<%= semantic_form_for @phone_number do |f| %>
  <%= f.inputs do %>
    <%= f.input :person, :include_blank => false, :label_method => :name %>
    <%= f.input :name, :label => 'Phone Type' %>
    <%= f.input :number %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
