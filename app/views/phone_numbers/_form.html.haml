= semantic_form_for @phone_number do |f|
  = f.inputs do
    = f.input :person, :include_blank => false, :label_method => :display_name, :collection => Person.find(:all, :order => "last_name ASC")
    = f.input :name, :label => 'Phone Type'
    = f.input :number
  = f.buttons do
    = f.commit_button

